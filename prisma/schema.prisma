generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int       @id @default(autoincrement())
  name         String
  description  String
  quantity     Int
  createdAt    DateTime  @default(now())
  
  categories   Category[]
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  createdAt   DateTime  @default(now())

  products    Product[]
}